{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationDir": "types",
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"strict": true,
		"target": "es2020",
		"module": "es2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@sveltejs/kit": ["./src/types/index"],
			// internal use only
			"types": ["./src/types/internal"]
		},
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/exports/**/*.js",
		"src/exports/**/*.ts"
	]
}
